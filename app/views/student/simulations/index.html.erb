<div class="history row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <h3 class="text-purple">Histórico de Simulados</h1>
      </div>

      <div class="card-body">
        <div class="row">
          <% simulations.each do |simulation| %>
            <div class="col-sm-6 col-md-6 col-lg-3 panel">
              <div class="container block">
                <h5><%= simulation.exam.title %></h5>
                <p></p>
                <div>
                  <i class="ti ti-calendar"></i><strong> <%= simulation.date %></strong><br>
                  <i class="ti ti-time"></i><strong> <%= simulation.time_spent %></strong><br>
                  <i class="ti ti-cup"></i><strong> <%= simulation.score %></strong><br>
                  <i class="ti ti-pencil"></i><strong> <%= simulation.questions.size %> Questões</strong>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>


    </div>
  </div>
</div>
