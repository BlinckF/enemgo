<div class="card-body">
  <h5 class="card-title mb-0 text-justify"><%= question.statement %></h5>
  <small>Fonte: <%= question.source %></small>
  <br><br>
  <%= render 'student/simulation_answers/form', simulation_answer: simulation_answer,
      question: question, simulation: simulation do %>

    <div class="col-lg-6 mx-auto text-center mb-3">
      <%= button_tag "Enviar Resposta", type: "submit", data: {disable_with: "<i class='ti-reload'></i> Enviando..."},
        class: "btn btn-round btn-primary btn-block btn-lg" %>
    </div>

    <% if questions.last_page? %>
    <div class="w-100 d-block mx-auto text-center mb-3">
      <%= render 'student/simulations/link_finish_simulation', btclass: 'btn-block btn-lg' %>
    </div>
    <% end %>
    <div class="col-lg-12 text-center">
      <%= link_to_prev_page questions, "< Anterior", { remote: true, param_name: :current_question,
        class: 'mx-1  btn-lg'} %>

      <%= link_to_next_page questions, "PrÃ³xima >", { remote: true, param_name: :current_question,
          class: 'text-right mx-1 btn-lg'} %>

    </div>
  <% end %>
</div>
<div id="flash-content"></div>
