<div class="card panel text-left card-block">
  <div class="card-header">
    <h4 class="text-purple">Melhores Pontuações</h4>
  </div>

  <div class="card-body">

    <table class="table" id="table-id">
      <thead class="text-muted">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Usuário</th>
            <th scope="col">Score</th>
          </tr>
      </thead>

      <tbody>
          <% @students.each_with_index do |student, index| %>
              <tr class="text-muted">
                <td><%= index + 1 %>º</td>
                <td><%= student.profile.avatar_thumb %> <%= student.username %></td>
                <td><%= student.score %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
    <br>
  </div>
</div>
