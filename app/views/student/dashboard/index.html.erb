<div class="student-dashboard container">

  <div class="panel panel-container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-6 col-md-3 col-lg-3 no-padding">
          <div class="card panel widget border-right">
            <%= link_to "#", class: "grow" do %>
              <i class="ti ti-medall large text-purple"></i>
            <% end %>
            <span class="large"><%= current_user.score %></span>
            <span class="text-muted">Seu Score</span>
          </div>
        </div>

        <div class="col-6 col-md-3 col-lg-3 no-padding">
          <div class="card panel widget border-right">
            <i class="ti ti-user large text-purple grow"></i>
            <span class="large">666</span>
            <span class="text-muted">Alunos</span>
          </div>
        </div>

        <div class="col-6 col-md-3 col-lg-3 no-padding">
          <div class="card panel widget border-right">
            <i class="ti ti-write large text-purple grow"></i>
            <span class="large">1200</span>
            <span class="text-muted">Banco de Questões</span>
          </div>
        </div>

        <div class="col-6 col-md-3 col-lg-3 no-padding">
          <div class="card panel widget">
            <%= link_to student_simulations_path, class: "grow" do %>
              <i class="ti ti-clipboard large text-purple"></i>
            <% end %>
            <span class="large"><%= current_user.simulations.size %></span>
            <span class="text-muted">Seus Simulados</span>
          </div>
        </div>
    </div>
  </div><!-- end panel-container -->

  <!-- Ranking -->
  <div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12 no-border">
      <div class="card panel text-left card-block">
        <div class="card-header">
          <h4 class="text-purple">Melhores Pontuações</h4>
        </div>

        <div class="card-body">

          <table class="table" id="table-id">
            <thead class="thead-light">
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Usuário</th>
                  <th scope="col">Score</th>
                </tr>
            </thead>

            <tbody>
                <% @students.each_with_index do |student, index| %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= student.username %></td>
                      <td><%= student.score %></td>
                    </tr>
                <% end %>
            </tbody>
          </table>
          <br>
        </div>
      </div>
    </div>
  </div>

</div>
