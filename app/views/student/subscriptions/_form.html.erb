<%= form_for [:student, :plan, subscription], remote: true do |f| %>

  <div class="text-center text-danger my-2">
    <span class="payment-errors"></span>
  </div>

  <div class="form-group">
    <%= text_field_tag nil, current_user.profile.full_name,
      data: { stripe: "name" }, class: "form-control", placeholder: "Nome escrito no cartão" %>
  </div>

  <div class="form-group">
    <%= text_field_tag nil, nil, data: { stripe: "number" }, class: "form-control",
      placeholder: "Número do cartão" %>
  </div>

  <div class="form-group">
    <div class="d-flex">
      <%= text_field_tag nil, nil, data: { stripe: "exp_month" },
        class: "form-control", placeholder: "Mês de expiração (MM)" %>
      <h3 class="font-weight-light mx-1">/</h3>
      <%= text_field_tag nil, nil, data: { stripe: "exp_year" },
        class: "form-control", placeholder: "Ano de expiração (AA)", maxlength: 2 %>
    </div>
  </div>

  <div class="form-group">
    <%= text_field_tag nil, nil, data: { stripe: "cvc" }, maxlength: 3, class: "form-control",
      placeholder: "Código de Verificação (CVC)" %>
  </div>

  <div class="text-center w-100">
    <%= f.submit "Efetuar pagamento", class: "submit btn btn-outline-primary btn-block btn-round" %>

  </div>

<% end %>
