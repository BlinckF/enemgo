<section class="bg-light py-5" id="plans">
  <div class="container">

    <%= render 'home/partials/header_section',
        title: 'Nossos Planos',
        subtitle: 'Tenha acesso ao conteúdo completo!'
    %>

    <div class="row py-5 justify-content-md-center">

      <div class="col-lg-4">
        <div class="card text-center" style="padding: 60px">
          <h4 class="text-uppercase text-secondary">Free</h4>
          <br>

          <p>Opção 1</p>
          <p>Opção 2</p>
          <br>
          <h3 class="price text-muted"
              style="font-weight: bold;
                    font-size: 60px;
                    line-height: 60px;
                    padding: 10px 0;"
            >
            <sup style="font-size: 28px;vertical-align: super;">R$</sup>0,00
            <span style="display: block;font-size: 12px;font-weight: 400;line-height: 25px;color: #788394;">
              Mês
            </span>
          </h3>
          <br>
          <a class="btn font-weight-bold btn-secondary" href="#">
            Sign up
          </a>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="card text-center" style="padding: 60px">
          <h4 class="text-uppercase text-primary">Premium</h4>
          <br>
          <p>Opção 1</p>
          <p>Opção 2</p>
          <br>
          <h3 class="price text-muted"
              style="font-weight: bold;
                    font-size: 60px;
                    line-height: 60px;
                    padding: 10px 0;"
            >
            <sup style="font-size: 28px;vertical-align: super;">R$</sup>19,99
            <span style="display: block;font-size: 12px;font-weight: 400;line-height: 25px;color: #788394;">
              Mês
            </span>
          </h3>

          <br>
          <%= link_to "Cadastre-se", "#", class: "btn btn-primary" %>
        </div>
      </div>

    </div>
  </div>

</section>
