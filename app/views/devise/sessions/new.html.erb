<div class="row py-5 justify-content-md-center">
  <div class="col-lg-4">
    <div class="container-fluid">

      <div class="card text-center">
        <div class="card-header">
          <h2>Log in</h2>
        </div>

        <div class="card-body">
          <div class="container">
            <div class="form-group">
              <%= link_to '<i class="ti ti-facebook"></i> Sign in with Facebook'.html_safe,
              user_facebook_omniauth_authorize_path, class: "btn btn-bold facebook form-control" %>
              <p></p>
              <%= link_to '<i class="ti ti-google"></i> Sign in with Google'.html_safe, "#",
              class: "btn btn-bold google form-control" %>
            </div>
            <p class="text-center">Or</p>
          </div><!-- end form-social -->

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="ti ti-email"></i><!-- Icon -->
                </span>
                <%= f.email_field(:email, autofocus: true,
                  placeholder: "Email", class: 'form-control')%>

              </div><!-- end .input-group-->
            </div><!-- end .form-group email-->

            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="ti ti-lock"></i><!-- Icon -->
                </span>
                <%= f.password_field :password, autocomplete: "off",
                placeholder: "Password", class: "form-control" %>

              </div><!-- end .input-group-->
            </div><!-- end .form-group password-->

            <% if devise_mapping.rememberable? -%>
              <div class="field text-left">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Log in", class: 'btn btn-primary form-control'%>
            </div>
          <% end %>

          <p></p>
          <%= link_to "Forgot your password?", new_user_password_path %>
        </div>

        <div class="card-footer">
          Not yet registered?<br>
          <%= link_to "Sign up", new_user_registration_path %>
        </div>

      </div>

    </div>
  </div>
</div>
