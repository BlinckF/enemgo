<div class="row py-5 justify-content-md-center">
  <div class="col-lg-4">
    <div class="container-fluid">

      <div class="card text-center">
        <div class="card-header">
          <h2>Sign up</h2>
        </div>
        <div class="card-body">

          <div class="container">
            <div class="form-group">
              <%= link_to '<i class="ti ti-facebook"></i> Sign up with Facebook'.html_safe,
              user_facebook_omniauth_authorize_path, class: "btn btn-bold facebook form-control" %>
              <p></p>
              <%= link_to '<i class="ti ti-google"></i> Sign up with Google'.html_safe, "#",
              class: "btn btn-bold google form-control" %>
            </div>
            <p class="text-center">Or</p>
          </div><!-- end form-social -->

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <!-- To use Render -->
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><i class="ti ti-email"></i></span>
                <%= f.email_field(:email, autofocus: true,
                  placeholder: "Email", class: 'form-control')%>

              </div><!-- end .input-group-->
            </div><!-- end .form-group email-->
            <!-- To use Render -->
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><i class="ti ti-lock"></i></span>
                <%= f.password_field :password, autocomplete: "off",
                placeholder: "Password", class: "form-control" %>
              </div><!-- end .input-group-->
            </div><!-- end .form-group password-->

            <p class="text-left" style="margin-top: -18px;">
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </p>

            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><i class="ti ti-arrow-circle-down"></i></span>
                <%= f.password_field :password_confirmation, autocomplete: "off",
                 placeholder: "Confirm password", class: "form-control" %>
              </div>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", class: 'btn btn-primary form-control'%>
            </div>
          <% end %>

        </div>

        <div class="card-footer">
          <%= link_to "Log in", new_user_session_path %>
        </div>

      </div>

    </div>
  </div>
</div>
