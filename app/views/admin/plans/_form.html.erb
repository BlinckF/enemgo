<%= form_with(model: [:admin, plan], local: true) do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :plan_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field  :price, id: :plan_price, class: "form-control"  %>
  </div>

  <div class="options">
    <%= form.label 'Opções' %>
    <%= form.fields_for :options_plans do |ff| %>
      <%= render 'options_plan_fields', f: ff %>
    <% end  %>
    <div class="links">
      <%= link_to_add_association 'Adicionar opção', form, :options_plans, class: '' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :stripe %>
    <%= check_box_tag :stripe, class: "form-control-checkbox" %>
  </div>

  <div class="text-right">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
