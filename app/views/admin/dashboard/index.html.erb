<div class="container">
  <div class="card p-2">
    <div class="card-block">
      <h2 class="text-purple"><i class="ti ti-stats-up"></i> Estatísticas do sistema</h2>
      <hr>
    </div>

    <div class="row py-3">
      <div class="col-md-6">
        <div class="row justify-content-center">
          <h4 class="text-purple">Provas</h4>
        </div>
        <%= pie_chart Exam.group(:kind).count, donut: true, colors: ["#822c95"] %>
      </div>
      <div class="col-md-6">
        <div class="row justify-content-center">
          <h4 class="text-purple">Questões</h4>
        </div>
        <%= pie_chart Question.group(:area).count, donut: true, colors: ["#3991ff", "#e93268", "#822c95"] %>
      </div>

    </div>
    <hr>
    <div class="row">
      <div class="col-lg-12 col-md-12">
        <div class="container py-2">
          <h4 class="text-purple">Novos Usuários</h4>

          <div class="row py-3">
            <%= line_chart User.group_by_day(:created_at).count, colors: ["purple"] %>
          </div>

          <div class="row py-3" style="padding: 0 20px;">
            <div class="col-md-4">
              <div class="label-purple">
                <span>Administradores</span>
                <p><%= current_user.total_users(:admin) %></p>
              </div>
            </div>
            <div class="col-md-4">
              <div class="label-pink">
                <span>Avaliadores</span>
                <p><%= current_user.total_users(:evaluator) %></p>
              </div>
            </div>
            <div class="col-md-4">
              <div class="label-blue">
                <span>Alunos</span>
                <p><%= current_user.total_users(:student) %></p>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>
