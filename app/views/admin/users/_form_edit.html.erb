<%= form_with(model: [:admin, user], local: true) do |form| %>

  <div class="row">
    <div class="form-group col-md-6">
      <%= form.label :kind %>
      <%= form.select :kind, options_for_select([:admin, :evaluator, :student], user.kind), {},
      {class: "form-control"} %>
    </div>
  </div>

  <%= form.fields_for :profile do |f| %>
    <%= render 'users/profiles/fields', form: f, profile: user.profile %>
  <% end %>
  <hr>
  <h4>EndereÃ§o</h4>

  <%= form.fields_for :address do |ff| %>
    <%= render 'users/addresses/form_fields', form: ff, address: user.address  %>
  <% end %>

  <div class="card-footer text-right">
    <%= link_to 'Cancelar', admin_user_path, class: "btn btn-round btn-outline-dark" %>
    <%= form.submit nil, class: "btn btn-round btn-outline-primary" %>
  </div>
<% end %>
