<%= form_for([ticketable, ticket], remote: true, class: "p-3") do |form| %>

  <div class="form-group">
    <%= form.label :motive %>
    <%= form.text_field :motive, id: :ticket_motive, class: "form-control", required: 'required' %>
  </div>

  <div class="form-group">
    <%= form.label :message %>
    <%= form.text_area :message, id: :ticket_message, class: "form-control", required: 'required' %>
  </div>

  <div class="actions">
    <%= button_tag "Gerar Ticket", type: "submit", class: "btn btn-block btn-outline-primary btn-round",
      data: {disable_with: "<i class='ti-reload'></i> Enviando..."} %>
  </div>

  <div class="ticket-errors">

  </div>
<% end %>
