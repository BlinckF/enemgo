<div class="row">
  <div class="form-group col-md-6">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, id: :profile_first_name, class: "form-control",
      required: true %>
  </div>

  <div class="form-group col-md-6">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :profile_last_name, class: "form-control",
      required: true %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-6">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :profile_phone, class: "form-control" %>
  </div>

  <div class="form-group col-md-6">
    <%= form.label :birthday %>
    <%= form.date_field :birthday, id: :profile_birthday,
      max: Date.new(2006, 01, 01), class: "form-control", required: true %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-6">
    <%= form.label :sex %>
    <%= form.select :sex,
      options_for_select([["Masculino", "M"],
                          ["Feminino", "F"]],
                                profile.sex),
      {}, {id: :profile_sex, class: "form-control", required: true} %>
  </div>
</div>
