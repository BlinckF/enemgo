<%= form_with(model: contact, remote: true) do |form| %>

  <div class="form-group form-inline">
    <%= form.label :name, class: "col-sm-2" %>
    <%= form.text_field :name, id: :contact_name, placeholder: "Seu nome", class: "form-control col-sm-10" %>
  </div>

  <div class="form-group form-inline">
    <%= form.label :email, class: "col-sm-2" %>
    <%= form.text_field :email, id: :contact_email, placeholder: "email@dominio.com", class: "form-control col-sm-10" %>
  </div>

  <div class="form-group form-inline">
    <%= form.label :theme, class: "col-sm-2" %>
    <%= form.text_field :theme, id: :contact_theme, placeholder: "Informe o assunto", class: "form-control col-sm-10" %>
  </div>

  <div class="form-group form-inline">
    <%= form.label :message, class: "col-sm-2" %>
    <%= form.text_area :message, id: :contact_message, placeholder: "Escreva sua mensagem aqui", class: "form-control col-sm-10" %>
  </div>

  <div class="text-right">
    <%= form.submit "Enviar mensagem", class: "btn btn-round btn-outline-primary" %>
  </div>
  
<% end %>
